// ============================================================================
// Eustress Engine Studio - Sync Domain Modal
// Sync domain data to object types
// ============================================================================

import { VerticalBox, HorizontalBox, LineEdit, ComboBox, CheckBox, ScrollView, Slider } from "std-widgets.slint";
import { Theme } from "theme.slint";

export component SyncDomainDialog inherits Rectangle {
    // Properties
    in property <[string]> available-domains: [];
    in property <[string]> available-fields: [];
    in-out property <string> selected-domain: "";
    in-out property <string> target-class: "Part";
    in-out property <string> layout: "Grid";
    in-out property <float> spacing-x: 2.0;
    in-out property <float> spacing-y: 0.0;
    in-out property <float> spacing-z: 2.0;
    in-out property <string> name-field: "";
    in-out property <string> color-field: "";
    in-out property <bool> show-billboard: false;
    in-out property <string> billboard-field: "";
    
    // Callbacks
    callback on-sync();
    callback on-close();
    callback on-preview();
    
    width: 100%;
    height: 100%;
    background: Theme.modal-backdrop;
    
    TouchArea {
        clicked => { root.on-close(); }
    }
    
    Rectangle {
        x: (parent.width - self.width) / 2;
        y: (parent.height - self.height) / 2;
        width: 550px;
        height: 550px;
        background: Theme.dialog-background;
        border-radius: 8px;
        drop-shadow-blur: 20px;
        drop-shadow-color: Theme.shadow-color;
        
        TouchArea {}
        
        VerticalBox {
            padding: 0px;
            spacing: 0px;
            
            // Header
            Rectangle {
                height: 48px;
                background: Theme.header-background;
                border-top-left-radius: 8px;
                border-top-right-radius: 8px;
                
                HorizontalBox {
                    padding: 16px;
                    
                    Text {
                        text: "Sync Domain to Object Type";
                        color: Theme.text-primary;
                        font-size: 18px;
                        font-weight: 600;
                        vertical-alignment: center;
                    }
                    
                    Rectangle { horizontal-stretch: 1; }
                    
                    Rectangle {
                        width: 28px;
                        height: 28px;
                        background: close-touch.has-hover ? Theme.button-hover : transparent;
                        border-radius: 4px;
                        
                        close-touch := TouchArea {
                            clicked => { root.on-close(); }
                        }
                        
                        Image {
                            width: 12px;
                            height: 12px;
                            source: @image-url("../../assets/icons/ui/close.svg");
                            image-fit: contain;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
            }
            
            // Content
            ScrollView {
                vertical-stretch: 1;
                
                VerticalBox {
                    padding: 16px;
                    spacing: 16px;
                    
                    // Domain selection
                    Text {
                        text: "Source";
                        color: Theme.text-secondary;
                        font-size: 11px;
                        font-weight: 600;
                    }
                    
                    HorizontalBox {
                        spacing: 8px;
                        
                        Text {
                            width: 100px;
                            text: "Domain";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        ComboBox {
                            horizontal-stretch: 1;
                            model: root.available-domains;
                            current-value <=> root.selected-domain;
                        }
                    }
                    
                    // Target configuration
                    Text {
                        text: "Target";
                        color: Theme.text-secondary;
                        font-size: 11px;
                        font-weight: 600;
                    }
                    
                    HorizontalBox {
                        spacing: 8px;
                        
                        Text {
                            width: 100px;
                            text: "Class";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        ComboBox {
                            horizontal-stretch: 1;
                            model: ["Part", "SpherePart", "CylinderPart", "Model"];
                            current-value <=> root.target-class;
                        }
                    }
                    
                    HorizontalBox {
                        spacing: 8px;
                        
                        Text {
                            width: 100px;
                            text: "Layout";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        ComboBox {
                            horizontal-stretch: 1;
                            model: ["Grid", "Line", "Circle", "Random"];
                            current-value <=> root.layout;
                        }
                    }
                    
                    // Spacing
                    Text {
                        text: "Spacing";
                        color: Theme.text-secondary;
                        font-size: 11px;
                        font-weight: 600;
                    }
                    
                    HorizontalBox {
                        spacing: 16px;
                        
                        HorizontalBox {
                            spacing: 4px;
                            
                            Text {
                                text: "X";
                                color: Theme.text-secondary;
                                vertical-alignment: center;
                            }
                            
                            Rectangle {
                                width: 60px;
                                height: 28px;
                                background: Theme.input-background;
                                border-radius: 4px;
                                border-width: 1px;
                                border-color: Theme.input-border;
                                
                                LineEdit {
                                    text: root.spacing-x;
                                }
                            }
                        }
                        
                        HorizontalBox {
                            spacing: 4px;
                            
                            Text {
                                text: "Y";
                                color: Theme.text-secondary;
                                vertical-alignment: center;
                            }
                            
                            Rectangle {
                                width: 60px;
                                height: 28px;
                                background: Theme.input-background;
                                border-radius: 4px;
                                border-width: 1px;
                                border-color: Theme.input-border;
                                
                                LineEdit {
                                    text: root.spacing-y;
                                }
                            }
                        }
                        
                        HorizontalBox {
                            spacing: 4px;
                            
                            Text {
                                text: "Z";
                                color: Theme.text-secondary;
                                vertical-alignment: center;
                            }
                            
                            Rectangle {
                                width: 60px;
                                height: 28px;
                                background: Theme.input-background;
                                border-radius: 4px;
                                border-width: 1px;
                                border-color: Theme.input-border;
                                
                                LineEdit {
                                    text: root.spacing-z;
                                }
                            }
                        }
                    }
                    
                    // Field mappings
                    Text {
                        text: "Field Mappings";
                        color: Theme.text-secondary;
                        font-size: 11px;
                        font-weight: 600;
                    }
                    
                    HorizontalBox {
                        spacing: 8px;
                        
                        Text {
                            width: 100px;
                            text: "Name Field";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        ComboBox {
                            horizontal-stretch: 1;
                            model: root.available-fields;
                            current-value <=> root.name-field;
                        }
                    }
                    
                    HorizontalBox {
                        spacing: 8px;
                        
                        Text {
                            width: 100px;
                            text: "Color Field";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        ComboBox {
                            horizontal-stretch: 1;
                            model: root.available-fields;
                            current-value <=> root.color-field;
                        }
                    }
                    
                    // Billboard
                    CheckBox {
                        text: "Show billboard labels";
                        checked <=> root.show-billboard;
                    }
                    
                    if root.show-billboard: HorizontalBox {
                        spacing: 8px;
                        
                        Text {
                            width: 100px;
                            text: "Label Field";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        ComboBox {
                            horizontal-stretch: 1;
                            model: root.available-fields;
                            current-value <=> root.billboard-field;
                        }
                    }
                }
            }
            
            // Footer
            Rectangle {
                height: 56px;
                background: Theme.header-background;
                border-bottom-left-radius: 8px;
                border-bottom-right-radius: 8px;
                
                HorizontalBox {
                    padding: 12px;
                    spacing: 8px;
                    
                    Rectangle {
                        width: 80px;
                        height: 32px;
                        background: Theme.button-background;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-preview(); }
                        }
                        
                        Text {
                            text: "Preview";
                            color: Theme.text-primary;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    
                    Rectangle { horizontal-stretch: 1; }
                    
                    Rectangle {
                        width: 80px;
                        height: 32px;
                        background: Theme.button-background;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-close(); }
                        }
                        
                        Text {
                            text: "Cancel";
                            color: Theme.text-primary;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    
                    Rectangle {
                        width: 80px;
                        height: 32px;
                        background: Theme.button-primary;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-sync(); }
                        }
                        
                        Text {
                            text: "Sync";
                            color: white;
                            font-weight: 500;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
            }
        }
    }
}
