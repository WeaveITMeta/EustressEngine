// ============================================================================
// Eustress Engine Studio - Terrain Editor Panel
// Brush tools and terrain manipulation
// ============================================================================

import { VerticalBox, HorizontalBox, ScrollView, Slider, ComboBox } from "std-widgets.slint";
import { Theme, PanelHeader } from "theme.slint";

export component TerrainEditor inherits Rectangle {
    // Properties
    in property <bool> has-terrain: false;
    in property <bool> edit-mode: false;
    in property <string> current-brush: "raise"; // raise, lower, smooth, flatten, paint
    in property <float> brush-size: 10.0;
    in property <float> brush-strength: 0.5;
    in property <float> brush-falloff: 0.5;
    in property <int> selected-texture: 0;
    
    // Callbacks
    callback on-toggle-edit-mode();
    callback on-set-brush(string);
    callback on-brush-size-changed(float);
    callback on-brush-strength-changed(float);
    callback on-brush-falloff-changed(float);
    callback on-select-texture(int);
    callback on-generate-terrain(string); // "small", "medium", "large"
    callback on-import-heightmap();
    callback on-export-heightmap();
    
    background: Theme.panel-background;
    
    VerticalBox {
        padding: 0px;
        spacing: 0px;
        
        PanelHeader {
            title: "Terrain Editor";
        }
        
        if !root.has-terrain: Rectangle {
            vertical-stretch: 1;
            
            VerticalBox {
                padding: 16px;
                spacing: 12px;
                alignment: center;
                
                Text {
                    text: "ðŸ”";
                    color: Theme.text-secondary;
                    font-size: 48px;
                    horizontal-alignment: center;
                }
                
                Text {
                    text: "No terrain in scene";
                    color: Theme.text-primary;
                    font-size: 14px;
                    horizontal-alignment: center;
                }
                
                Text {
                    text: "Generate a terrain to start sculpting";
                    color: Theme.text-secondary;
                    font-size: 12px;
                    horizontal-alignment: center;
                }
                
                Rectangle { height: 8px; }
                
                // Generate buttons
                HorizontalBox {
                    spacing: 8px;
                    alignment: center;
                    
                    Rectangle {
                        width: 80px;
                        height: 32px;
                        background: Theme.button-background;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-generate-terrain("small"); }
                        }
                        
                        Text {
                            text: "Small";
                            color: Theme.text-primary;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    
                    Rectangle {
                        width: 80px;
                        height: 32px;
                        background: Theme.button-primary;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-generate-terrain("medium"); }
                        }
                        
                        Text {
                            text: "Medium";
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    
                    Rectangle {
                        width: 80px;
                        height: 32px;
                        background: Theme.button-background;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-generate-terrain("large"); }
                        }
                        
                        Text {
                            text: "Large";
                            color: Theme.text-primary;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
                
                Rectangle { height: 8px; }
                
                Rectangle {
                    width: 140px;
                    height: 32px;
                    background: Theme.button-background;
                    border-radius: 4px;
                    
                    TouchArea {
                        clicked => { root.on-import-heightmap(); }
                    }
                    
                    Text {
                        text: "Import Heightmap...";
                        color: Theme.text-primary;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }
            }
        }
        
        if root.has-terrain: ScrollView {
            vertical-stretch: 1;
            
            VerticalBox {
                padding: 8px;
                spacing: 12px;
                
                // Edit mode toggle
                Rectangle {
                    height: 36px;
                    background: root.edit-mode ? Theme.accent-blue : Theme.button-background;
                    border-radius: 4px;
                    
                    TouchArea {
                        clicked => { root.on-toggle-edit-mode(); }
                    }
                    
                    HorizontalBox {
                        padding: 8px;
                        spacing: 8px;
                        
                        Text {
                            text: root.edit-mode ? "âœ“" : "â—‹";
                            color: root.edit-mode ? white : Theme.text-secondary;
                            vertical-alignment: center;
                        }
                        
                        Text {
                            text: "Edit Mode (T)";
                            color: root.edit-mode ? white : Theme.text-primary;
                            font-weight: 500;
                            vertical-alignment: center;
                        }
                    }
                }
                
                // Brush tools
                Text {
                    text: "Brush Tools";
                    color: Theme.text-secondary;
                    font-size: 11px;
                    font-weight: 600;
                }
                
                HorizontalBox {
                    spacing: 4px;
                    
                    for brush in [
                        { id: "raise", icon: "â–²", label: "Raise" },
                        { id: "lower", icon: "â–¼", label: "Lower" },
                        { id: "smooth", icon: "~", label: "Smooth" },
                        { id: "flatten", icon: "â•", label: "Flatten" },
                        { id: "paint", icon: "ðŸŽ¨", label: "Paint" },
                    ]: Rectangle {
                        horizontal-stretch: 1;
                        height: 48px;
                        background: root.current-brush == brush.id ? Theme.selection-background : Theme.button-background;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-set-brush(brush.id); }
                        }
                        
                        VerticalBox {
                            alignment: center;
                            
                            Text {
                                text: brush.icon;
                                color: root.current-brush == brush.id ? Theme.accent-blue : Theme.text-primary;
                                font-size: 16px;
                                horizontal-alignment: center;
                            }
                            
                            Text {
                                text: brush.label;
                                color: Theme.text-secondary;
                                font-size: 10px;
                                horizontal-alignment: center;
                            }
                        }
                    }
                }
                
                // Brush settings
                Text {
                    text: "Brush Settings";
                    color: Theme.text-secondary;
                    font-size: 11px;
                    font-weight: 600;
                }
                
                VerticalBox {
                    spacing: 8px;
                    
                    // Size
                    HorizontalBox {
                        Text {
                            width: 70px;
                            text: "Size";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        Slider {
                            horizontal-stretch: 1;
                            minimum: 1;
                            maximum: 100;
                            value: root.brush-size;
                            changed(value) => { root.on-brush-size-changed(value); }
                        }
                        
                        Text {
                            width: 40px;
                            text: round(root.brush-size);
                            color: Theme.text-secondary;
                            font-size: 11px;
                            horizontal-alignment: right;
                            vertical-alignment: center;
                        }
                    }
                    
                    // Strength
                    HorizontalBox {
                        Text {
                            width: 70px;
                            text: "Strength";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        Slider {
                            horizontal-stretch: 1;
                            minimum: 0;
                            maximum: 1;
                            value: root.brush-strength;
                            changed(value) => { root.on-brush-strength-changed(value); }
                        }
                        
                        Text {
                            width: 40px;
                            text: round(root.brush-strength * 100) + "%";
                            color: Theme.text-secondary;
                            font-size: 11px;
                            horizontal-alignment: right;
                            vertical-alignment: center;
                        }
                    }
                    
                    // Falloff
                    HorizontalBox {
                        Text {
                            width: 70px;
                            text: "Falloff";
                            color: Theme.text-primary;
                            vertical-alignment: center;
                        }
                        
                        Slider {
                            horizontal-stretch: 1;
                            minimum: 0;
                            maximum: 1;
                            value: root.brush-falloff;
                            changed(value) => { root.on-brush-falloff-changed(value); }
                        }
                        
                        Text {
                            width: 40px;
                            text: round(root.brush-falloff * 100) + "%";
                            color: Theme.text-secondary;
                            font-size: 11px;
                            horizontal-alignment: right;
                            vertical-alignment: center;
                        }
                    }
                }
                
                // Texture palette (for paint mode)
                if root.current-brush == "paint": VerticalBox {
                    spacing: 8px;
                    
                    Text {
                        text: "Textures";
                        color: Theme.text-secondary;
                        font-size: 11px;
                        font-weight: 600;
                    }
                    
                    HorizontalBox {
                        spacing: 4px;
                        
                        for i in [0, 1, 2, 3]: Rectangle {
                            width: 48px;
                            height: 48px;
                            background: i == root.selected-texture ? Theme.selection-background : Theme.background-tertiary;
                            border-radius: 4px;
                            border-width: i == root.selected-texture ? 2px : 0px;
                            border-color: Theme.accent-blue;
                            
                            TouchArea {
                                clicked => { root.on-select-texture(i); }
                            }
                            
                            Text {
                                text: i == 0 ? "Grass" : i == 1 ? "Rock" : i == 2 ? "Sand" : "Snow";
                                color: Theme.text-secondary;
                                font-size: 9px;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }
                }
                
                Rectangle { height: 8px; }
                
                // Import/Export
                Text {
                    text: "Import / Export";
                    color: Theme.text-secondary;
                    font-size: 11px;
                    font-weight: 600;
                }
                
                HorizontalBox {
                    spacing: 8px;
                    
                    Rectangle {
                        horizontal-stretch: 1;
                        height: 32px;
                        background: Theme.button-background;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-import-heightmap(); }
                        }
                        
                        Text {
                            text: "Import";
                            color: Theme.text-primary;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    
                    Rectangle {
                        horizontal-stretch: 1;
                        height: 32px;
                        background: Theme.button-background;
                        border-radius: 4px;
                        
                        TouchArea {
                            clicked => { root.on-export-heightmap(); }
                        }
                        
                        Text {
                            text: "Export";
                            color: Theme.text-primary;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
            }
        }
    }
}
