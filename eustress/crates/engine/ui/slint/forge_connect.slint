// ============================================================================
// Eustress Engine Studio - Forge Connect Dialog
// Connect to Forge cloud infrastructure
// ============================================================================

import { VerticalBox, HorizontalBox, LineEdit, CheckBox, Button } from "std-widgets.slint";
import { Theme } from "theme.slint";

export component ForgeConnectDialog inherits Rectangle {
    // Properties
    in-out property <string> server-url: "https://forge.eustress.dev";
    in-out property <string> api-key: "";
    in-out property <bool> remember-credentials: true;
    in property <bool> connecting: false;
    in property <string> status-message: "";
    in property <string> error-message: "";
    
    // Callbacks
    callback on-connect();
    callback on-close();
    
    width: 100%;
    height: 100%;
    background: Theme.modal-backdrop;
    
    TouchArea {
        clicked => { root.on-close(); }
    }
    
    Rectangle {
        x: (parent.width - self.width) / 2;
        y: (parent.height - self.height) / 2;
        width: 420px;
        height: 340px;
        background: Theme.dialog-background;
        border-radius: 8px;
        drop-shadow-blur: 20px;
        drop-shadow-color: Theme.shadow-color;
        
        TouchArea {}
        
        VerticalBox {
            padding: 24px;
            spacing: 16px;
            
            // Header
            HorizontalBox {
                Text {
                    text: "Connect to Forge";
                    color: Theme.text-primary;
                    font-size: 20px;
                    font-weight: 600;
                }
                
                Rectangle { horizontal-stretch: 1; }
                
                Rectangle {
                    width: 28px;
                    height: 28px;
                    background: close-touch.has-hover ? Theme.button-hover : transparent;
                    border-radius: 4px;
                    
                    close-touch := TouchArea {
                        clicked => { root.on-close(); }
                    }
                    
                    Image {
                        width: 12px;
                        height: 12px;
                        source: @image-url("../../assets/icons/ui/close.svg");
                        image-fit: contain;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }
            }
            
            // Server URL
            VerticalBox {
                spacing: 4px;
                
                Text {
                    text: "Server URL";
                    color: Theme.text-secondary;
                    font-size: 12px;
                }
                
                Rectangle {
                    height: 36px;
                    background: Theme.input-background;
                    border-radius: 4px;
                    border-width: 1px;
                    border-color: Theme.input-border;
                    
                    LineEdit {
                        text <=> root.server-url;
                    }
                }
            }
            
            // API Key
            VerticalBox {
                spacing: 4px;
                
                Text {
                    text: "API Key";
                    color: Theme.text-secondary;
                    font-size: 12px;
                }
                
                Rectangle {
                    height: 36px;
                    background: Theme.input-background;
                    border-radius: 4px;
                    border-width: 1px;
                    border-color: Theme.input-border;
                    
                    LineEdit {
                        text <=> root.api-key;
                        input-type: password;
                    }
                }
            }
            
            CheckBox {
                text: "Remember credentials";
                checked <=> root.remember-credentials;
            }
            
            // Status/Error
            if root.status-message != "": Text {
                text: root.status-message;
                color: Theme.text-secondary;
                font-size: 12px;
            }
            
            if root.error-message != "": Rectangle {
                height: 36px;
                background: #4a2020;
                border-radius: 4px;
                
                HorizontalBox {
                    padding: 8px;
                    
                    Text {
                        text: root.error-message;
                        color: Theme.text-error;
                        font-size: 12px;
                        vertical-alignment: center;
                    }
                }
            }
            
            Rectangle { vertical-stretch: 1; }
            
            // Footer
            HorizontalBox {
                spacing: 8px;
                alignment: end;
                
                Rectangle {
                    width: 80px;
                    height: 36px;
                    background: Theme.button-background;
                    border-radius: 4px;
                    
                    TouchArea {
                        clicked => { root.on-close(); }
                    }
                    
                    Text {
                        text: "Cancel";
                        color: Theme.text-primary;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }
                
                Rectangle {
                    width: 100px;
                    height: 36px;
                    background: root.connecting ? Theme.button-background : Theme.button-primary;
                    border-radius: 4px;
                    
                    TouchArea {
                        enabled: !root.connecting;
                        clicked => { root.on-connect(); }
                    }
                    
                    Text {
                        text: root.connecting ? "Connecting..." : "Connect";
                        color: root.connecting ? Theme.text-secondary : white;
                        font-weight: 500;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }
            }
        }
    }
}
