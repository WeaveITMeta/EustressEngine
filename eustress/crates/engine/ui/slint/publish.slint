// ============================================================================
// Eustress Engine Studio - Publish Dialog
// Experience publishing workflow
// ============================================================================

import { VerticalBox, HorizontalBox, LineEdit, TextEdit, Button, CheckBox, ComboBox } from "std-widgets.slint";
import { Theme } from "theme.slint";

export component PublishDialog inherits Rectangle {
    // Properties
    in-out property <string> experience-name: "";
    in-out property <string> description: "";
    in-out property <string> genre: "All";
    in-out property <bool> is-public: true;
    in property <bool> is-publishing: false;
    in property <string> error-message: "";
    in property <bool> is-update: false;
    
    // Callbacks
    callback on-publish();
    callback on-close();
    
    width: 100%;
    height: 100%;
    background: Theme.modal-backdrop;
    
    TouchArea {
        clicked => { root.on-close(); }
    }
    
    Rectangle {
        x: (parent.width - self.width) / 2;
        y: (parent.height - self.height) / 2;
        width: 500px;
        height: 480px;
        background: Theme.dialog-background;
        border-radius: 8px;
        drop-shadow-blur: 20px;
        drop-shadow-color: Theme.shadow-color;
        
        TouchArea {
            // Prevent click-through
        }
        
        VerticalBox {
            padding: 24px;
            spacing: 16px;
            
            // Header
            HorizontalBox {
                Text {
                    text: root.is-update ? "Update Experience" : "Publish Experience";
                    color: Theme.text-primary;
                    font-size: 20px;
                    font-weight: 600;
                }
                
                Rectangle { horizontal-stretch: 1; }
                
                Rectangle {
                    width: 28px;
                    height: 28px;
                    background: close-touch.has-hover ? Theme.button-hover : transparent;
                    border-radius: 4px;
                    
                    close-touch := TouchArea {
                        clicked => { root.on-close(); }
                    }
                    
                    Text {
                        text: "✕";
                        color: Theme.text-secondary;
                        font-size: 16px;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }
            }
            
            // Name field
            VerticalBox {
                spacing: 4px;
                
                Text {
                    text: "Experience Name";
                    color: Theme.text-secondary;
                    font-size: 12px;
                }
                
                Rectangle {
                    height: 36px;
                    background: Theme.input-background;
                    border-radius: 4px;
                    border-width: 1px;
                    border-color: Theme.input-border;
                    
                    LineEdit {
                        text <=> root.experience-name;
                        // placeholder-text: "My Awesome Experience";
                    }
                }
            }
            
            // Description field
            VerticalBox {
                spacing: 4px;
                
                Text {
                    text: "Description";
                    color: Theme.text-secondary;
                    font-size: 12px;
                }
                
                Rectangle {
                    height: 100px;
                    background: Theme.input-background;
                    border-radius: 4px;
                    border-width: 1px;
                    border-color: Theme.input-border;
                    
                    TextEdit {
                        text <=> root.description;
                    }
                }
            }
            
            // Genre selector
            VerticalBox {
                spacing: 4px;
                
                Text {
                    text: "Genre";
                    color: Theme.text-secondary;
                    font-size: 12px;
                }
                
                ComboBox {
                    model: ["All", "Adventure", "Building", "Comedy", "Fighting", "FPS", "Horror", "Medieval", "Military", "Naval", "RPG", "Sci-Fi", "Sports", "Town and City", "Western"];
                    current-value <=> root.genre;
                }
            }
            
            // Visibility
            HorizontalBox {
                spacing: 8px;
                
                CheckBox {
                    text: "Public";
                    checked <=> root.is-public;
                }
                
                Text {
                    text: root.is-public ? "Anyone can play" : "Only you can access";
                    color: Theme.text-secondary;
                    font-size: 12px;
                    vertical-alignment: center;
                }
            }
            
            // Error message
            if root.error-message != "": Rectangle {
                height: 36px;
                background: #4a2020;
                border-radius: 4px;
                
                HorizontalBox {
                    padding: 8px;
                    
                    Text {
                        text: "⚠ " + root.error-message;
                        color: Theme.text-error;
                        font-size: 12px;
                        vertical-alignment: center;
                    }
                }
            }
            
            Rectangle { vertical-stretch: 1; }
            
            // Actions
            HorizontalBox {
                spacing: 8px;
                alignment: end;
                
                Rectangle {
                    width: 80px;
                    height: 36px;
                    background: Theme.button-background;
                    border-radius: 4px;
                    
                    TouchArea {
                        clicked => { root.on-close(); }
                    }
                    
                    Text {
                        text: "Cancel";
                        color: Theme.text-primary;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }
                
                Rectangle {
                    width: 100px;
                    height: 36px;
                    background: root.is-publishing ? Theme.button-background : Theme.button-primary;
                    border-radius: 4px;
                    
                    TouchArea {
                        enabled: !root.is-publishing && root.experience-name != "";
                        clicked => { root.on-publish(); }
                    }
                    
                    Text {
                        text: root.is-publishing ? "Publishing..." : root.is-update ? "Update" : "Publish";
                        color: root.is-publishing ? Theme.text-secondary : white;
                        font-weight: 500;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }
            }
        }
    }
}
