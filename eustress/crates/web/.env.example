# =============================================================================
# Eustress Web - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# API Configuration
# -----------------
# Base URL for the Eustress API backend
API_URL=http://localhost:7000

# Application Settings
# --------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Public URL where the web app is hosted
PUBLIC_URL=http://localhost:3000

# Authentication
# --------------
# Steam OpenID authentication
STEAM_API_KEY=your_steam_api_key_here
STEAM_RETURN_URL=http://localhost:3000/api/auth/steam/callback

# Optional: OAuth providers (future)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=

# Analytics & Monitoring (optional)
# ---------------------------------
# SENTRY_DSN=
# ANALYTICS_ID=

# Feature Flags
# -------------
ENABLE_STEAM_LOGIN=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true
